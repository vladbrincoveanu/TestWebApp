@model LendViewModel
<div class="row orderForm">

    <form asp-controller="Lend" asp-action="LendGame" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Lend a game</h3>
        @Html.HiddenFor(m => Model.Game.GameId)
        <div class="form-group">
            <label asp-for="Game.Customer" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                <div class="form-group">
                    <label class="control-label col-sm-2">Name:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.Customers.Name</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Money:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.Customers.Money</p>
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-2">Game price:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.Game.Price</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Lend" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Lend" />
            </div>
        </div>
    </form>
</div>