@model GameViewModel

<div class="row orderForm">

    <form asp-controller="Game" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Update book</h3>
        @Html.HiddenFor(m => Model.Game.GameId)
        <div class="form-group">
            <label asp-for="Game.Author" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Game.AuthorID,
                                                       new SelectList(Model.Authors.Select(x => new { Value = x.AuthorId, Text = x.Name }), "Value", "Text"),
                                                       htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Game.Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Game.Name" class="form-control" placeholder="Enter game title" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Game.Price" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Game.Price" class="form-control" placeholder="Enter game Price" />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Game" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>